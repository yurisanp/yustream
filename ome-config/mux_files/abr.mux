<?xml version="1.0" encoding="UTF-8"?>
<Multiplex>
    <OutputStream>
        <Name>abr</Name>
    </OutputStream>

    <SourceStreams>
        <!-- Stream de entrada 4K/Fonte -->
        <SourceStream>
            <Name>fonte</Name>
            <Url>stream://default/fonte/fonte</Url>
            <TrackMap>
                <Track>
                    <SourceTrackName>bypass_video</SourceTrackName>
                    <NewTrackName>fonte_video</NewTrackName>
                </Track>
                <Track>
                    <SourceTrackName>bypass_audio</SourceTrackName>
                    <NewTrackName>fonte_audio</NewTrackName>
                </Track>
            </TrackMap>
        </SourceStream>
        
        <!-- Stream de entrada 1080p -->
        <SourceStream>
            <Name>1080p</Name>
            <Url>stream://default/1080/1080</Url>
            <TrackMap>
                <Track>
                    <SourceTrackName>bypass_video</SourceTrackName>
                    <NewTrackName>1080p_video</NewTrackName>
                </Track>
                <Track>
                    <SourceTrackName>bypass_audio</SourceTrackName>
                    <NewTrackName>1080p_audio</NewTrackName>
                </Track>
            </TrackMap>
        </SourceStream>
        
        <!-- Stream de entrada 720p -->
        <SourceStream>
            <Name>720p</Name>
            <Url>stream://default/720/720</Url>
            <TrackMap>
                <Track>
                    <SourceTrackName>bypass_video</SourceTrackName>
                    <NewTrackName>720p_video</NewTrackName>
                </Track>
                <Track>
                    <SourceTrackName>bypass_audio</SourceTrackName>
                    <NewTrackName>720p_audio</NewTrackName>
                </Track>
            </TrackMap>
        </SourceStream>
    </SourceStreams>
    
    <Playlists>
        <Playlist>
            <Name>LLHLS ABR</Name>
            <FileName>abr</FileName>
            
            <Rendition>
                <Name>Fonte</Name>
                <Video>fonte_video</Video>
                <Audio>fonte_audio</Audio>
            </Rendition>
            <Rendition>
                <Name>1080p</Name>
                <Video>1080p_video</Video>
                <Audio>1080p_audio</Audio>
            </Rendition>
            <Rendition>
                <Name>720p</Name>
                <Video>720p_video</Video>
                <Audio>720p_audio</Audio>
            </Rendition>
        </Playlist>
    </Playlists>
    
</Multiplex>
